body
	font-family "Lato", sans-serif
	background-image url('/images/background.png')
	padding 0.5em

h1
	font-size 2em
	line-height 1.4em

h2
	font-size 1.5em

p
	line-height 1.5em
	margin 0.5em 0

img
	max-width 100%

.widget
	float left
	width calc(100% - 1em)
	padding 1em
	margin 0.5em
	border-radius 5px
	background-color rgb(255, 255, 255)
	box-sizing border-box
	box-shadow 0 0 6px rgba(0, 0, 0, 0.6)